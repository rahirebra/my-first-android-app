<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#E3F2FD">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš€ GitHub Built App"
        android:textSize="28sp"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <!-- Main Message -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="22sp"
        android:textColor="#1976D2"
        android:layout_marginBottom="30dp" />

    <!-- Counter Display -->
    <TextView
        android:id="@+id/counterText"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="0"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:elevation="8dp"
        android:layout_marginBottom="40dp" />

    <!-- Main Button -->
    <Button
        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START TAPPING"
        android:textSize="20sp"
        android:padding="20dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="12dp"
        android:layout_marginBottom="30dp" />

    <!-- Instructions Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± How to Play:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ Tap button to increase counter"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ Long press button to reset"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ Background changes colors"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ Reach 50 taps to win!"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built 100% on GitHub Web Interface"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Android Studio Needed!"
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp" />

</LinearLayout>
